{
  "name": "bioniql",
  "version": "0.1.0",
  "description": "GraphQL API for the LEGO Bionicle theme",
  "main": "build/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node .",
    "start:db": "json-server --watch data/db.json",
    "dev": "concurrently -n db,server \"npm:start:db\" \"nodemon ./src/server.ts\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tohaker/bioniQL.git"
  },
  "keywords": [
    "lego",
    "bionicle",
    "graphql"
  ],
  "author": "Miles Bardon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Tohaker/bioniQL/issues"
  },
  "homepage": "https://github.com/Tohaker/bioniQL#readme",
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^18",
    "concurrently": "^8.2.1",
    "json-server": "^0.17.3",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@pothos/core": "^3.37.0",
    "axios": "^1.5.0",
    "graphql": "^16.8.0",
    "graphql-yoga": "^4.0.4"
  }
}
