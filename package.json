{
  "name": "bioniql",
  "version": "0.1.0",
  "description": "GraphQL API for the LEGO Bionicle theme",
  "main": "build/server.js",
  "scripts": {
    "build": "tsc",
    "check:types": "tsc --noEmit",
    "codegen": "graphql-codegen",
    "start": "node .",
    "start:db": "json-server --watch data/db.json",
    "dev": "concurrently -n db,server \"npm:start:db\" \"nodemon ./src/server.ts\"",
    "pretest": "npm run codegen",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tohaker/bioniQL.git"
  },
  "keywords": [
    "lego",
    "bionicle",
    "graphql"
  ],
  "author": "Miles Bardon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Tohaker/bioniQL/issues"
  },
  "homepage": "https://github.com/Tohaker/bioniQL#readme",
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/client-preset": "^4.1.0",
    "@graphql-tools/executor-http": "^1.0.2",
    "@swc/core": "^1.3.92",
    "@swc/jest": "^0.2.29",
    "@tsconfig/node18": "^18.2.2",
    "@types/jest": "^29.5.5",
    "@types/json-server": "^0.14.5",
    "@types/node": "^18",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "json-server": "^0.17.4",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@pothos/core": "^3.41.0",
    "axios": "^1.5.0",
    "graphql": "^16.8.1",
    "graphql-yoga": "^4.0.4"
  }
}
